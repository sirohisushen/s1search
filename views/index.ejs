<!DOCTYPE html>
<html lang="en">
<head>
  <!-- Meta -->
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Title -->
  <title>S1 – AI Summarized Search</title>

  <!-- Icons & Fonts -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@300;400;600&display=swap" rel="stylesheet" />

  <!-- Styles -->
  <style>
    /* Typography & Base */
    body {
      background-color: #00008B;
      font-family: 'Roboto Mono', monospace;
      color: #fff;
      margin: 0;
      display: flex;
      justify-content: center;
      padding: 40px 20px;
    }

    /* Container with Glassmorphism */
    .container {
      background: rgba(255, 255, 255, 0.08);
      backdrop-filter: blur(12px);
      border-radius: 20px;
      padding: 40px;
      width: 100%;
      max-width: 640px;
      box-shadow: 0 0 40px rgba(0, 0, 0, 0.3);
    }

    /* Logo Header */
    .logo {
      text-align: center;
      margin-bottom: 20px;
    }

    .logo img {
      height: 100px;
    }

    /* Subtext & Legal */
    .search-box p {
      font-size: 14px;
      text-align: center;
      opacity: 0.85;
      margin: 8px 0;
    }

    .search-box a {
      color: #00FFFF;
      text-decoration: underline;
    }

    /* Search Form */
    #search-form {
      display: flex;
      align-items: center;
      background: rgba(255, 255, 255, 0.15);
      border-radius: 30px;
      padding: 8px 16px;
      margin-top: 20px;
    }

    #search-input {
      flex: 1;
      border: none;
      background: transparent;
      color: #fff;
      padding: 10px;
      font-size: 16px;
      outline: none;
    }

    #search-form button {
      background: #fff;
      color: #000;
      border: none;
      border-radius: 50%;
      padding: 10px 12px;
      cursor: pointer;
    }

    /* Results & Summary */
    .final-summary,
    .search-results {
      margin-top: 32px;
    }

    .final-summary h2 {
      margin-bottom: 12px;
    }

    .result {
      background: rgba(255, 255, 255, 0.1);
      padding: 14px;
      border-radius: 12px;
      margin-bottom: 14px;
    }

    .result a {
      color: #00FFFF;
      font-weight: bold;
      text-decoration: none;
    }

    .no-results {
      text-align: center;
      margin-top: 20px;
      opacity: 0.7;
    }
  </style>
</head>
<body>
  <main class="container">
    <!-- Search Header -->
    <section class="search-box">
      <div class="logo">
        <img src="logo.png" alt="S1 Logo" />
      </div>
      <p><strong>S1 Model</strong> may take 1–5 seconds per query. Hang tight.</p>
      <p>By continuing you agree to our <a href="/legal" target="_blank">legal terms</a>.</p>

      <!-- AI Search Input -->
      <form id="search-form" action="/search" method="POST">
        <input id="search-input" type="text" name="query" placeholder="Search S1..." required />
        <button type="submit"><i class="fas fa-search"></i></button>
      </form>
    </section>

    <!-- Conditional: AI Summary Block -->
    <% if (finalSummary) { %>
      <section class="final-summary">
        <h2>AI Overview</h2>
        <p><%= finalSummary %></p>
      </section>
    <% } %>

    <!-- Conditional: Result Cards -->
    <% if (summary && summary.length > 0) { %>
      <section class="search-results">
        <% summary.forEach(item => { %>
          <div class="result">
            <h3><a href="<%= item.url %>" target="_blank" rel="noopener"><%= item.title %></a></h3>
            <p><%= item.summary %></p>
          </div>
        <% }) %>
      </section>
    <% } else if (query) { %>
      <p class="no-results">No results found for "<%= query %>".</p>
    <% } %>
  </main>
</body>
</html>
